<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="exam">
		<jta-data-source>java:/examDS</jta-data-source>
		<class>edu.esprit.entities.CategoryEvent</class>
		<class>edu.esprit.entities.Event</class>
		<class>edu.esprit.entities.Organizer</class>
		<class>edu.esprit.entities.Participant</class>
		<class>edu.esprit.entities.Reservation</class>
		<class>edu.esprit.entities.ReservationId</class>
		<class>edu.esprit.entities.User</class>
		<class>edu.esprit.entities.Venue</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
		</properties>
	</persistence-unit>
</persistence>
